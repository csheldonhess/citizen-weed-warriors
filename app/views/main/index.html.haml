.table
  .table-row
    .table-cell.sidebar
      %h1
        = image_tag "logos/weed_warriors.png", :alt => t("titles.main", :thing => t("defaults.thing").titleize), :title => t("titles.main", :thing => t("defaults.thing").titleize)
      %p.alert-message.block-message#tagline
        = t("defaults.tagline")
      #content
        = render :partial => "layouts/flash", :locals => {:flash => flash}
        - if signed_in?
          = render :partial => "sidebar/search"
        - else
          = render :partial => "sidebar/combo_form"
      #logos
        #col1
          %a{:href => "http://codeforamerica.org/"}
            = image_tag "logos/cfa.png", :alt => t("sponsors.cfa"), :title => t("sponsors.cfa")
          %br
          %a{:href => "http://alaskahackathon.org/"}
            = image_tag "logos/hakathon.png", :alt => t("sponsors.built"), :title => t("sponsors.built")
        #col2
          %a{:href => "http://www.anchorageparkfoundation.org/"}
            = image_tag "logos/apf.png", :alt => t("sponsors.city"), :title => t("sponsors.city")
         
      #feedback
        %p
          %a{:href => URI.escape("mailto:weeds.free.ak@gmail.com?subject=#{t("titles.main", :thing => t("defaults.thing").titleize)} - #{t("links.feedback").titleize}")}
            = t("links.feedback")
    .table-cell.map-container
      #map
        &nbsp;
